{
  "name": "color-space-shift",
  "license": "MIT",
  "displayName": "Color Space Shift",
  "description": "Quickly transform #RRGGBB<->hsl(), rgb() and more.",
  "version": "1.0.0",
  "publisher": "bbugh",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:extension.colorSpaceShift.commands",
    "onCommand:extension.colorSpaceShift.hexSmartConvert",
    "onCommand:extension.colorSpaceShift.hslSmartConvert",
    "onCommand:extension.colorSpaceShift.rgbSmartConvert"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.colorSpaceShift.commands",
        "title": "Convert Color..."
      },
      {
        "command": "extension.colorSpaceShift.hexSmartConvert",
        "title": "Convert Color to #RRGGBB/AA"
      },
      {
        "command": "extension.colorSpaceShift.hslSmartConvert",
        "title": "Convert Color to hsl/hsla()"
      },
      {
        "command": "extension.colorSpaceShift.rgbSmartConvert",
        "title": "Convert Color to rgb/rgba()"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "lint": "eslint --fix src/**/*.ts test/**/*.ts",
    "package": "vsce package",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.7",
    "@types/sinon": "^7.0.11",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.4",
    "prettier": "^1.17.0",
    "sinon": "^7.3.2",
    "typescript": "^3.4.5",
    "vsce": "^1.59.0",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "color": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn format --",
      "yarn lint --",
      "git add"
    ]
  }
}
